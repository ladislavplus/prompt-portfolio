{
    "name": "translation_cs_to_en",
    "description": "A set of test cases for evaluating Czech to English translation prompts.",
    "test_cases": [
        {
            "id": "cs_en_001",
            "input": {
                "source_language": "Czech",
                "target_language": "English",
                "text_to_translate": "Ahoj, jak se máš?"
            },
            "expected_output": "Hello, how are you?"
        },
        {
            "id": "cs_en_002",
            "input": {
                "source_language": "Czech",
                "target_language": "English",
                "text_to_translate": "Venku se začíná stmívat."
            },
            "expected_output": "It's starting to get dark outside."
        },
        {
            "id": "cs_en_003",
            "input": {
                "source_language": "Czech",
                "target_language": "English",
                "text_to_translate": "Zabalíme to ve čtyři."
            },
            "expected_output": "We'll wrap it up at four."
        }
    ]
}
